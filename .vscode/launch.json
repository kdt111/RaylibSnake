	"version": "0.2.0",
	"configurations": [
		{
			"name": "Compile and debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/${workspaceFolderBasename}_debug.exe",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "gdb.exe",
			"setupCommands": [
				{
					"description": "Włącz formatowanie kodu dla gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build project (debug)"
		}
	]
}